{% extends 'base.html.twig' %}

{% block title %}Formulaire de Recrutement | LSMC{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Formulaire de Recrutement</h1>

        {# Afficher les messages flash (comme la confirmation d'envoi) #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card shadow-lg mb-4">
            <div class="card-body p-4">
                {{ form_start(form) }}
                
                <div class="mb-4">
                    <h3 class="border-bottom pb-2">Informations HRP</h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.hrpFirstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.hrpAge) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.idUniqueGame) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.pseudoDiscord) }}
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h3 class="border-bottom pb-2">Informations RP</h3>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.rpFirstName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.rpLastName) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.rpSexe) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.rpBirthday) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.rpPhone) }}
                        </div>
                        <div class="col-md-6 mb-3">
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h3 class="border-bottom pb-2">Moyens de Transport</h3>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            {{ form_row(form.voiture) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_row(form.moto) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_row(form.camion) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_row(form.helicoptere) }}
                        </div>
                        <div class="col-md-3 mb-3">
                            {{ form_row(form.avion) }}
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <h3 class="border-bottom pb-2">Autres Informations</h3>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.Disponibility) }}
                        </div>
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.Motivation) }}
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    {{ form_row(form.submit) }}
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
